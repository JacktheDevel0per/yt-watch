{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "yt-watch",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "setFullscreen": true,
        "setMaximizable": true,
        "maximize": true,
        "setFocus": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "tech.lemonlime.yt-watch",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": {
        "frame-src": ["https://www.youtube.com"],
        "script-src": ["https://www.youtube.com"],
        "style-src": ["https://www.youtube.com"]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "yt-watch",
        "width": 800,
        "height": 600
      }
    ]
  }
}
